<?xml version="1.0" encoding="UTF-8"?>
<project name="org.mwc.debrief.legacy" default="build.jars" basedir=".">

	<property name="p2.build.repo" value="file:${buildDirectory}/buildRepo"/>
	<property name="basews" value="${ws}"/>
	<property name="baseos" value="${os}"/>
	<property name="basearch" value="${arch}"/>
	<property name="basenl" value="${nl}"/>
	<property name="bundleId" value="org.mwc.debrief.legacy"/>
	<property name="bundleVersion" value="1.0.377"/>
	<property name="p2.publishonerror" value="false"/>

	<!-- Compiler settings. -->
	<property name="javacFailOnError" value="false"/>
	<property name="javacDebugInfo" value="on"/>
	<property name="javacVerbose" value="false"/>
	<property name="logExtension" value=".log"/>
	<property name="compilerArg" value=""/>
	<property name="compilation.prereq.log" value="${buildDirectory}/prereqErrors.log"/>
	<property name="javacSource" value="1.7"/>
	<property name="javacTarget" value="1.7"/>
	<condition property="dir_bootclasspath" value="${java.home}/../Classes">
		<and>
			<os family="mac"/>
			<available file="${java.home}/../Classes" type="dir"/>
		</and>
	</condition>
	<property name="dir_bootclasspath" value="${java.home}/lib"/>
	<path id="path_bootclasspath">
		<fileset dir="${dir_bootclasspath}">
			<include name="*.jar"/>
		</fileset>
	</path>
	<property name="bootclasspath" refid="path_bootclasspath"/>
	<condition property="bundleBootClasspath" value="${JavaSE-1.7}"	>
		<isset property="JavaSE-1.7"/>
	</condition>
	<condition property="bundleJavacSource" value="1.7"	>
		<isset property="JavaSE-1.7"/>
	</condition>
	<condition property="bundleJavacTarget" value="1.7"	>
		<isset property="JavaSE-1.7"/>
	</condition>
	<property name="bundleJavacSource" value="${javacSource}"/>
	<property name="bundleJavacTarget" value="${javacTarget}"/>
	<property name="bundleBootClasspath" value="${bootclasspath}"/>
	
	<target name="initVersion">
		<taskdef name="xmltask" classname="com.oopsconsultancy.xmltask.ant.XmlTask"
			classpath="conf/xmltask.jar"
			onerror="report"/>
		<xmltask source="../org.mwc.debrief.product/debriefng.product" dest="${temp.folder}/debriefng.product">
				<copy path="/product[@attr='version']" property="product.version"/>
		</xmltask>
		<echo>product version is: ${product.version}</echo>
	</target>
	
	<target name="init" depends="properties">
		<condition property="pluginTemp" value="${buildTempFolder}/plugins"		>
			<isset property="buildTempFolder"/>
		</condition>
		<property name="pluginTemp" value="${basedir}"/>
		<condition property="build.result.folder" value="${pluginTemp}/org.mwc.debrief.legacy_1.0.377"		>
			<isset property="buildTempFolder"/>
		</condition>
		<property name="build.result.folder" value="${basedir}"/>
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
		<condition property="p2.publish.parts" value="true"		>
			<istrue value="${p2.gathering}"/>
		</condition>
		<property name="dist.dir" value="dist"/>
		<property name="dist.lib.dir" value="dist/lib"/>
		<property name="compilation.problem.marker" value="${build.result.folder}/compilation.problem"/>
		<condition property="compilation.problem.marker.exists" value="true"		>
			<and>
			<available file="${compilation.problem.marker}"/>
			<isfalse value="${p2.publishonerror}"/>
			</and>
		</condition>
		<antcall target="initVersion"/>
	</target>

	<target name="properties" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>

	</target>

	<target name="build.update.jar" depends="init" description="Build the plug-in: org.mwc.debrief.legacy for an update site.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="generate">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<jar destfile="${plugin.destination}/org.mwc.debrief.legacy_1.0.377.jar" basedir="${temp.folder}/org.mwc.debrief.legacy_1.0.377" filesetmanifest="merge"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="debrief_legacy.jar.nestedJars">
	</target>
	<target name="debrief_legacy.jar" depends="init,debrief_legacy.jar.nestedJars" unless="debrief_legacy.jar" description="Create jar: org.mwc.debrief.legacy debrief_legacy.jar.">
		<delete dir="${temp.folder}/debrief_legacy.jar.bin"/>
		<mkdir dir="${temp.folder}/debrief_legacy.jar.bin"/>
		<path id="debrief_legacy.jar.classpath">
			<pathelement path="../org.mwc.cmap.legacy/libs/hamcrest-core-1.2.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/libs/junit-4.12.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/libs/openmap.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/cmap_legacy.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/libs/openmap.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/libs/jmf.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/libs/vrml97.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/libs/flanagan.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/libs/jackson-core-asl-1.9.4.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/libs/jackson-mapper-asl-1.9.4.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/libs/joda-time-2.1.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/libs/javalite-common-1.2-20120312.200900-220.jar"/>
			<pathelement path="../org.mwc.cmap.legacy/libs/commons-math3-3.3.jar"/>
			<pathelement path="../org.mwc.cmap.jfreechart/bin/"/>
			<pathelement path="../org.mwc.cmap.jfreechart/libs/jcommon-1.0.23.jar"/>
			<pathelement path="../org.mwc.cmap.jfreechart/libs/jfreechart-1.0.19-experimental.jar"/>
			<pathelement path="../org.mwc.cmap.jfreechart/libs/jfreechart-1.0.19-swt.jar"/>
			<pathelement path="../org.mwc.cmap.jfreechart/libs/jfreechart-1.0.19.jar"/>
			<pathelement path="libs/poi-3.14-20160307.jar"/>
			<pathelement path="libs/poi-scratchpad-3.14-20160307.jar"/>
			<pathelement path="libs/xmlbeans-2.6.0.jar"/>
			<pathelement path="libs/poi-ooxml-3.14.jar"/>
			<pathelement path="libs/poi-ooxml-schemas-3.14.jar"/>
			<pathelement path="libs/pdfbox-2.0.3.jar"/>
			<pathelement path="libs/commons-logging-1.2.jar"/>
			<pathelement path="libs/fontbox-2.0.3.jar"/>
			<pathelement path="libs/January.jar"/>
			<pathelement path="libs/slf4j-api.jar"/>
			<pathelement path="libs/slf4j-simple-1.7.25.jar"/>
		</path>
		<!-- compile the source code -->
		<javac destdir="${temp.folder}/debrief_legacy.jar.bin" failonerror="${javacFailOnError}" verbose="${javacVerbose}" debug="${javacDebugInfo}" includeAntRuntime="no" bootclasspath="${bundleBootClasspath}" source="${bundleJavacSource}" target="${bundleJavacTarget}"		>
			<compilerarg line="${compilerArg}" compiler="${build.compiler}"/>
			<classpath refid="debrief_legacy.jar.classpath" />
			<src path="src/"			/>
			<compilerarg value="@${basedir}/javaCompiler.debrief_legacy.jar.args" compiler="org.eclipse.jdt.core.JDTCompilerAdapter"			/>
			<compilerarg line="-log &apos;${temp.folder}/debrief_legacy.jar.bin${logExtension}&apos;" compiler="org.eclipse.jdt.core.JDTCompilerAdapter"			/>
		</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/debrief_legacy.jar.bin" failonerror="true" overwrite="false">
			<fileset dir="src/">
				<exclude name="**/*.java"/>
				<exclude name="**/package.htm*"/>
			</fileset>
		</copy>
		<jar destfile="${temp.folder}/debrief_legacy.jar" basedir="${temp.folder}/debrief_legacy.jar.bin">
			<manifest>
				<attribute name="Main-Class" value="Debrief.GUI.DebriefApp"/>
				<attribute name="Specification-Title" value="Debrief Lite"/>
				<attribute name="Specification-Version" value="1.0"/>
				<attribute name="Specification-Vendor" value="MWC"/>
				<attribute name="Implementation-Title" value="debriefLite"/>
				<attribute name="Implementation-Version" value="0.1 ${TODAY}"/>
				<attribute name="Implementation-Vendor" value="DeepBlue C Ltd"/>
			</manifest>
		</jar>
		<delete dir="${temp.folder}/debrief_legacy.jar.bin"/>
	</target>

	<target name="debrief_legacysrc.zip" depends="init" unless="debrief_legacysrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<antcall target="zip.debrief_legacysrc.zip"/>
	</target>
	<target name="zip.debrief_legacysrc.zip">
		<zip destfile="${build.result.folder}/debrief_legacysrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src/">
				<include name="**/*.java"/>
			</fileset>
		</zip>
	</target>
	<target name="copy.debrief_legacysrc.zip">
		<copy todir="${source.destination.folder}/debrief_legacysrc" failonerror="true" overwrite="true">
			<fileset dir="src/">
				<include name="**/*.java"/>
			</fileset>
		</copy>
	</target>

	<target name="build.jars" depends="init" description="Compile classes and build nested jars for the plug-in: org.mwc.debrief.legacy.">
		<delete file="${compilation.problem.marker}" quiet="true"/>
		<available property="debrief_legacy.jar" file="${build.result.folder}/debrief_legacy.jar"/>
		<antcall target="debrief_legacy.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="debrief_legacysrc.zip" file="${build.result.folder}/debrief_legacysrc.zip"/>
		<antcall target="debrief_legacysrc.zip"/>
	</target>

	

	<target name="generate" depends="init,build.jars">
		<mkdir dir="${dist.dir}"/>
		<mkdir dir="${dist.lib.dir}"/>
		<copy todir="${dist.dir}" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}">
				<include name="debrief_legacy.jar"/>
			</fileset>
		</copy>
		<copy todir="${dist.lib.dir}" failonerror="true" overwrite="true">
			<fileset dir="${basedir}">
				<include name="libs/poi-3.14-20160307.jar"/>
				<include name="libs/poi-scratchpad-3.14-20160307.jar"/>
				<include name="libs/poi-ooxml-3.14.jar"/>
				<include name="libs/poi-ooxml-schemas-3.14.jar"/>
				<include name="libs/xmlbeans-2.6.0.jar"/>
				<include name="libs/pdfbox-2.0.3.jar"/>
				<include name="libs/commons-logging-1.2.jar"/>
				<include name="libs/fontbox-2.0.3.jar"/>
				<include name="libs/January.jar"/>
				<include name="libs/slf4j-api.jar"/>
				<include name="libs/slf4j-simple-1.7.25.jar"/>
			</fileset>
			<fileset dir="../org.mwc.cmap.legacy/libs" includes="*.jar"/>
			<fileset dir="../org.mwc.cmap.legacy" includes="cmap_legacy.jar"/>
		</copy>
		<antcall target="apitools.generation">
			<param name="projectLocation" value="${basedir}"/>
			<param name="binary.folders" value="${destination.temp.folder}/org.mwc.debrief.legacy_1.0.377/debrief_legacy.jar;C:\Users\Ayesha\git\debrief-dev\org.mwc.debrief.legacy/libs/xmlbeans-2.6.0.jar;C:\Users\Ayesha\git\debrief-dev\org.mwc.debrief.legacy/libs/fontbox-2.0.3.jar;C:\Users\Ayesha\git\debrief-dev\org.mwc.debrief.legacy/libs/poi-ooxml-schemas-3.14.jar;C:\Users\Ayesha\git\debrief-dev\org.mwc.debrief.legacy/libs/slf4j-api.jar;C:\Users\Ayesha\git\debrief-dev\org.mwc.debrief.legacy/libs/poi-scratchpad-3.14-20160307.jar;C:\Users\Ayesha\git\debrief-dev\org.mwc.debrief.legacy/libs/commons-logging-1.2.jar;C:\Users\Ayesha\git\debrief-dev\org.mwc.debrief.legacy/libs/slf4j-simple-1.7.25.jar;C:\Users\Ayesha\git\debrief-dev\org.mwc.debrief.legacy/libs/poi-ooxml-3.14.jar;C:\Users\Ayesha\git\debrief-dev\org.mwc.debrief.legacy/libs/January.jar;C:\Users\Ayesha\git\debrief-dev\org.mwc.debrief.legacy/libs/pdfbox-2.0.3.jar;C:\Users\Ayesha\git\debrief-dev\org.mwc.debrief.legacy/libs/poi-3.14-20160307.jar"/>
			<param name="projectName" value="${bundleId}_${bundleVersion}"/>
			<param name="target.folder" value="${destination.temp.folder}/org.mwc.debrief.legacy_1.0.377"/>
		</antcall>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.mwc.debrief.legacy_1.0.377"/>
		<copy file="${build.result.folder}/debrief_legacysrc.zip" todir="${destination.temp.folder}/org.mwc.debrief.legacy_1.0.377" failonerror="false" overwrite="false"/>
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}/org.mwc.debrief.legacy_1.0.377"/>
		</antcall>
	</target>

	<target name="gather.individual.sources" depends="init">
		<antcall target="copy.debrief_legacysrc.zip">
			<param name="source.destination.folder" value="${destination.temp.folder}"/>
		</antcall>
		<antcall target="copy.src.includes">
			<param name="source.destination.folder" value="${destination.temp.folder}"/>
		</antcall>
	</target>

	<target name="copy.src.includes" depends="init">
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.mwc.debrief.legacy_1.0.377"/>
		<copy todir="${destination.temp.folder}/org.mwc.debrief.legacy_1.0.377" failonerror="false" overwrite="false">
			<fileset dir="${temp.folder}">
				<include name="debrief_legacy.jar.bin${logExtension}"/>
			</fileset>
		</copy>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: org.mwc.debrief.legacy of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/debrief_legacy.jar"/>
		<delete file="${build.result.folder}/debrief_legacysrc.zip"/>
		<delete file="${plugin.destination}/org.mwc.debrief.legacy_1.0.377.jar"/>
		<delete file="${plugin.destination}/org.mwc.debrief.legacy_1.0.377.zip"/>
		<delete dir="${temp.folder}"/>
		<delete file="${compilation.problem.marker}" quiet="true"/>
		<delete dir="${dist.dir}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="C:/Users/Ayesha/git/debrief-dev/org.mwc.debrief.legacy" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: org.mwc.debrief.legacy.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}">
				<include name="**/*.bin${logExtension}"/>
			</fileset>
		</delete>
		<zip destfile="${plugin.destination}/org.mwc.debrief.legacy_1.0.377.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="apitools.generation" if="generateAPIDescription">
		<apitooling.apigeneration  projectName="${projectName}" project="${projectLocation}" binary="${binary.folders}" target="${target.folder}" extramanifests="${extraManifests}" allownonapiproject="${allowNonApiProject}"		/>
	</target>

	<target name="makeonejar" depends="generate">
			<move file="${temp.folder}/debrief_legacy.jar" tofile="${dist.dir}/main.jar"/>
			<taskdef name="one-jar"
				         classname="com.simontuffs.onejar.ant.OneJarTask"
				         classpath="conf/one-jar-ant-task-0.96.jar"
				         onerror="report"/>
			<one-jar destfile="${dist.dir}/DebriefLite-${product.version}.jar">
				<main jar="${dist.dir}/main.jar">
				</main>
				<lib>
					<fileset dir="${dist.dir}/lib/" includes="**/*.jar" />
				</lib>
				<!--fileset dir="src/com/lisletech/athena/firewallgrader/resources/images" includes="*.*">
				</fileset-->
			</one-jar>
			<delete file="${dist.dir}/main.jar"/>
			<delete dir="${dist.dir}/lib"/>
		</target>
	<target name="dist" depends="clean">
		<ant antfile="build.xml" dir="../org.mwc.cmap.legacy" target="cmap_legacy_jar"/>
		<antcall target="makeonejar"/>
	</target>
</project>